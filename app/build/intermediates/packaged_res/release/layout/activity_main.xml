<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/connectionStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Not Connected"
        android:textSize="22sp"
        android:layout_centerInParent="true"
        android:textColor="@color/colorNotConnected"
        android:textStyle="bold"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/voiceAssistanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connectionStatusTextView"
        android:layout_centerInParent="true"
        android:text="Voice Assistance: Off"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="20dp" />

    <ProgressBar
        android:id="@+id/speedProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageView"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="126dp"
        android:max="120"
        android:progress="100"
        android:progressDrawable="@drawable/progress_bar" /> <!-- Use custom drawable -->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/braintec"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/connectionStatusTextView" />

    <TextView
        android:id="@+id/muteCallsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/voiceAssistanceTextView"
        android:layout_centerHorizontal="true"
        android:text="Mute Calls: Off"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/emergencyMsgTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/muteCallsTextView"
        android:layout_centerHorizontal="true"
        android:text="Emergency Msg: Off"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/speedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed: 0 km/h"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_below="@id/emergencyMsgTextView"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

</RelativeLayout>
